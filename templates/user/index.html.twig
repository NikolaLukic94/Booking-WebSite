{% extends 'base.html.twig' %}

{% block body %}

<div class="container" id="users-card"><!-- container -->
  <div class="col-md-10">
    <div class="card">
      <div class="card-header text-center">
        <div class="row">
        <p id="users-card-header">Users:</p>
        <form class="form-inline my-2 my-lg-0">
          <div id="users-search-button">
            <input class="form-control mr-sm-2" type="search" placeholder="Search user" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit" >Search</button>
        </div>
            </form>    
        </div>  
      </div>
      <div class="card-body">
        <table class="users-table text-center">
          <tr>
            <th>photo</th>         
            <th>First Name</th>
            <th>Last Name</th>
            <th>Password</th>
            <th>Points</th>
            <th>Active</th>
            <th>View Address/es</th>
            <th></th>
          </tr>
          {% for user in users %}
          <tr>
            <td></td>
            <td>{{ user.getFirstName() }}</td>
            <td>{{ user.getLastName() }}</td>
            <td>{{ user.getEmail() }}</td>
            <td>{{ user.getUsername() }}</td>
            <td>{{ user.getActive() }}</td>
            <td></td>
            <td>/</td>
            <td>  
            <a class="dropdown-item" href="/users/delete/{{ user.getId() }}">Delete</a>
          </tr>
          {% endfor %}
        </table>
      </div>
      <div class="card-footer">
        <div class="row">
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Filter by City/Country" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit" >Search</button>
         </form>   
        <div class="btn-group" id="filter-by-dropdown">
          <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Sort by
          </button>
          <div class="dropdown-menu">
            <p>Date - newest</p>
            <p>Date - latest</p>
            <p>Points - highest first</p>
            <p>Points - lowest first</p>
            <p># of addresses - asc</p>
          </div>
        </div>
        </div>
      </div>
        </div>
    </div>
   </div>
</div>

{% endblock %}
